<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red; background-color: #f8d7da; padding: 15px; border-radius: 5px; margin-bottom: 20px; max-width: 600px; margin: 0 auto;">
      <h2 style="font-size: 1.2rem; font-weight: bold; margin-bottom: 10px;"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li style="font-size: 1rem; margin: 5px 0;"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="max-width: 600px; margin: 0 auto; margin-bottom: 20px;">
    <%= form.label :name, "Nazwa", style: "display: block; font-weight: bold; margin-bottom: 8px;" %>
    <%= form.text_field :name, style: "width: 100%; padding: 10px; border-radius: 5px; border: 1px solid #ccc; font-size: 1rem;" %>
  </div>

  <div style="max-width: 600px; margin: 0 auto;">
    <%= form.submit "Zapisz", style: "width: 100%; padding: 12px; background-color: #007bff; color: white; border: none; border-radius: 5px; font-size: 1rem; cursor: pointer;" %>
  </div>
<% end %>
