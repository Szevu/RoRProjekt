<style>
    /* Stylowanie formularza */
    form {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        font-weight: bold;
        display: block;
        margin-bottom: 8px;
    }

    .form-group input[type="text"],
    .form-group input[type="submit"] {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 1rem;
        box-sizing: border-box;
    }

    .form-group input[type="text"]:focus {
        border-color: #007bff;
        outline: none;
    }

    .form-submit {
        margin-top: 20px;
        text-align: center;
    }

    .submit-btn {
        padding: 12px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
    }

    .submit-btn:hover {
        background-color: #0056b3;
    }

    /* Stylowanie komunikatów o błędach */
    .error-messages {
        background-color: #f8d7da;
        color: #721c24;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .error-messages h2 {
        margin-bottom: 10px;
    }

    .error-messages ul {
        list-style-type: none;
        padding-left: 0;
    }

    .error-messages li {
        margin: 5px 0;
    }
</style>
