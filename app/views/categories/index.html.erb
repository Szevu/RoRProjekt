<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>


<p style="color: green; text-align: center; font-size: 1.2rem; margin-top: 20px;">
  <%= notice %>
</p>

<% content_for :title, "Categories" %>

<h1 style="text-align: center; font-size: 2rem; color: #333; margin-bottom: 30px;">Kategorie</h1>

<div id="categories" style="display: flex; flex-wrap: wrap; justify-content: center; gap: 20px; margin-top: 30px;">
  <% @categories.each do |category| %>
    <div style="border: 1px solid #ddd; padding: 20px; border-radius: 8px; width: 200px; text-align: center; background-color: #f9f9f9;">
      <%= render category %>
      <p style="margin-top: 15px;">
        <%= link_to "Pokaż", category, style: "color: #007bff; text-decoration: none; font-size: 1rem;" %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "Dodaj kategorię", new_category_path, style: "display: inline-block; text-align: center; margin-top: 30px; padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px; width: auto; font-size: 1rem;" %>
