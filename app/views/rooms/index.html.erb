<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>

<style>
    /* Pasek nawigacji */
    .navbar-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background-color: #007bff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        list-style-type: none;
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 0;
        background-color: #007bff;
    }

    .navbar li {
        margin: 0 20px;
    }

    .navbar-link {
        color: white;
        text-decoration: none;
        font-size: 1.1rem;
        padding: 12px 20px;
        display: block;
        border-radius: 5px;
    }

    .navbar-link:hover {
        background-color: #0056b3;
        transition: background-color 0.3s;
    }

    /* Dostosowanie nagłówka i opisu poniżej paska */
    h1 {
        margin-top: 100px; /* Odstęp od paska */
        font-size: 2rem;
        color: #333;
    }

    p {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 30px;
    }

    /* Responsywność: Zmniejszamy rozmiar czcionki na mniejszych ekranach */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: center;
        }

        .navbar-link {
            margin-bottom: 10px;
        }
    }
</style>
<p style="color: green"><%= notice %></p>

<% content_for :title, "Pokoje" %>

<h1 class="text-center mb-4">Pokoje</h1>

<div id="rooms" class="room-list">
  <% @rooms.each do |room| %>
    <div class="room-card">
      <%= render room %>
      <p>
        <%= link_to "Pokaż pokój", room, class: "btn btn-info" %>
      </p>
    </div>
  <% end %>
</div>

<div class="text-center mt-4">
  <%= link_to "Dodaj pokój", new_room_path, class: "btn btn-primary" %>
</div>

<style>
    /* Kontener pokoi */
    #rooms {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Automatyczne dopasowanie liczby kolumn */
        gap: 20px;
        padding: 20px;
        justify-items: center;
    }

    /* Karta pokoju */
    .room-card {
        background-color: #f7f7f7;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 250px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .room-card p {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 10px;
    }

    /* Przycisk - wygląd */
    .btn {
        padding: 8px 15px;
        border-radius: 5px;
        font-size: 1em;
        text-decoration: none;
    }

    /* Kolor przycisku info */
    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    /* Kolor przycisku primary */
    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
