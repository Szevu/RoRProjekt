<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>

<style>
    /* Pasek nawigacji */
    .navbar-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background-color: #007bff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        list-style-type: none;
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 0;
        background-color: #007bff;
    }

    .navbar li {
        margin: 0 20px;
    }

    .navbar-link {
        color: white;
        text-decoration: none;
        font-size: 1.1rem;
        padding: 12px 20px;
        display: block;
        border-radius: 5px;
    }

    .navbar-link:hover {
        background-color: #0056b3;
        transition: background-color 0.3s;
    }

    /* Dostosowanie nagłówka i opisu poniżej paska */
    h1 {
        margin-top: 100px; /* Odstęp od paska */
        font-size: 2rem;
        color: #333;
    }

    p {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 30px;
    }

    /* Responsywność: Zmniejszamy rozmiar czcionki na mniejszych ekranach */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: center;
        }

        .navbar-link {
            margin-bottom: 10px;
        }
    }
</style>
<% content_for :title, "Nowy pokój" %>

<h1 class="text-center mb-4">Nowy pokój</h1>

<%= render "form", room: @room %>

<br>

<div class="text-center mt-4">
  <%= link_to "Wróć do pokoi", rooms_path, class: "btn btn-secondary" %>
</div>

<style>
    /* Stylowanie nagłówka */
    h1 {
        font-size: 2rem;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Przycisk do powrotu */
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        padding: 8px 16px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-secondary:hover {
        background-color: #5a6368;
    }

    /* Centrum dla linku do powrotu */
    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 20px;
    }

    /* Form stylowanie */
    form {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input[type="text"],
    input[type="number"] {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
    }

    input[type="submit"] {
        width: 100%;
        padding: 12px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
    }

    input[type="submit"]:hover {
        background-color: #0056b3;
    }
</style>
