<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>

<style>
    /* Pasek nawigacji */
    .navbar-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background-color: #007bff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        list-style-type: none;
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 0;
        background-color: #007bff;
    }

    .navbar li {
        margin: 0 20px;
    }

    .navbar-link {
        color: white;
        text-decoration: none;
        font-size: 1.1rem;
        padding: 12px 20px;
        display: block;
        border-radius: 5px;
    }

    .navbar-link:hover {
        background-color: #0056b3;
        transition: background-color 0.3s;
    }

    /* Dostosowanie nagłówka i opisu poniżej paska */
    h1 {
        margin-top: 100px; /* Odstęp od paska */
        font-size: 2rem;
        color: #333;
    }

    p {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 30px;
    }

    /* Responsywność: Zmniejszamy rozmiar czcionki na mniejszych ekranach */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: center;
        }

        .navbar-link {
            margin-bottom: 10px;
        }
    }
</style>
<% content_for :title, "Edycja użytkownika" %>

<h1>Edytuj użytkownika</h1>

<%= render "form", user: @user %>

<br>

<div class="action-buttons">
  <%= link_to "Pokaż użytkownika", @user, class: "btn btn-info btn-sm" %>
  <%= link_to "Wróć do użytkowników", users_path, class: "btn btn-secondary btn-sm" %>
</div>

<style>
    /* Nagłówek */
    h1 {
        font-size: 2rem;
        margin-bottom: 20px;
        text-align: center;
        color: #333;
    }

    /* Kontener dla przycisków */
    .action-buttons {
        margin-top: 20px;
        display: flex;
        justify-content: center;
        gap: 15px;
        align-items: center;
    }

    .action-buttons a {
        text-decoration: none;
        padding: 8px 15px;
        font-size: 0.9rem;
        border-radius: 5px;
        display: inline-block;
    }

    /* Kolorystyka dla przycisków */
    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: white;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #5a6368;
    }

    /* Dodatkowe style dla formy */
    .form-container {
        margin-top: 20px;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-container input,
    .form-container select {
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        width: 100%;
        box-sizing: border-box;
    }

    .form-container label {
        font-size: 1rem;
        font-weight: bold;
    }
</style>
