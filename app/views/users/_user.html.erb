<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>


<div id="<%= dom_id user %>" class="user-card">
  <p>
    <strong>Imię:</strong>
    <%= user.first_name %>
  </p>

  <p>
    <strong>Nazwisko:</strong>
    <%= user.last_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= user.email %>
  </p>
</div>

<style>
    .user-card {
        background-color: #f9f9f9;
        padding: 20px;
        margin: 20px 0;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid #ddd;
        max-width: 500px;
        margin-left: auto;
        margin-right: auto;
    }

    .user-card p {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 10px;
    }

    .user-card strong {
        color: #333;
    }

    .user-card p:last-child {
        margin-bottom: 0;
    }
</style>
