<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>

<style>
    /* Pasek nawigacji */
    .navbar-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background-color: #007bff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        list-style-type: none;
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 0;
        background-color: #007bff;
    }

    .navbar li {
        margin: 0 20px;
    }

    .navbar-link {
        color: white;
        text-decoration: none;
        font-size: 1.1rem;
        padding: 12px 20px;
        display: block;
        border-radius: 5px;
    }

    .navbar-link:hover {
        background-color: #0056b3;
        transition: background-color 0.3s;
    }

    /* Dostosowanie nagłówka i opisu poniżej paska */
    h1 {
        margin-top: 100px; /* Odstęp od paska */
        font-size: 2rem;
        color: #333;
    }

    p {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 30px;
    }

    /* Responsywność: Zmniejszamy rozmiar czcionki na mniejszych ekranach */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: center;
        }

        .navbar-link {
            margin-bottom: 10px;
        }
    }
</style>
<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :first_name, "Imię" %> <!-- Zmieniono etykietę na Imię -->
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, "Nazwisko" %> <!-- Zmieniono etykietę na Nazwisko -->
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, "Email" %> <!-- Opcjonalnie zmiana etykiety na polski -->
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Zapisz", class: "btn btn-primary" %>
  </div>
<% end %>

<style>
    /* Stylowanie dla formularza */
    .form-group {
        margin-bottom: 15px;
        width: 100%; /* Zapewnienie pełnej szerokości */
        max-width: 500px; /* Maksymalna szerokość formularza */
        margin: 0 auto 15px auto; /* Centrowanie formularza */
    }

    .form-group label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 1rem;
        box-sizing: border-box;
    }

    .form-control:focus {
        border-color: #007bff;
        outline: none;
    }

    /* Stylowanie dla błędów */
    .error-messages {
        background-color: #f8d7da;
        color: #721c24;
        padding: 15px;
        border-radius: 5px;
        margin-bottom: 20px;
        width: 100%;
        max-width: 500px; /* Błędy mają maksymalną szerokość jak formularz */
        margin: 0 auto;
    }

    .error-messages h2 {
        margin-bottom: 10px;
    }

    .error-messages ul {
        list-style-type: none;
        padding-left: 0;
    }

    .error-messages li {
        margin: 5px 0;
    }

    /* Stylowanie przycisku */
    .btn-primary {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-size: 1rem;
        cursor: pointer;
        display: block;
        width: 100%;
        max-width: 500px;
        margin: 0 auto;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
