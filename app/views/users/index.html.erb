
<p style="color: green"><%= notice %></p>
<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>


<% content_for :title, "Użytkownicy" %>

<h1 class="text-center mb-4">Użytkownicy</h1>

<div id="users" class="user-list">
  <% @users.each do |user| %>
    <div class="user-card">
      <%= render user %>
      <p>
        <%= link_to "Pokaż użytkownika", user, class: "btn btn-info" %>
      </p>
    </div>
  <% end %>
</div>

<div class="text-center mt-4">
  <%= link_to "Dodaj użytkownika", new_user_path, class: "btn btn-primary" %>
</div>

<style>

    #users {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); /* Automatyczne dopasowanie liczby kolumn */
        gap: 20px;
        padding: 20px;
        justify-items: center;
    }


    .user-card {
        background-color: #f7f7f7;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 250px;
        text-align: center;
        border: 1px solid #ddd;
    }

    .user-card p {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 10px;
    }


    .btn {
        padding: 8px 15px;
        border-radius: 5px;
        font-size: 1em;
        text-decoration: none;
    }


    .btn-info {
        background-color: #17a2b8;
        color: white;
    }

    .btn-info:hover {
        background-color: #138496;
    }


    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>
