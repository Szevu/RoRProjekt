<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>

 <br>
<p style="color: green"><%= notice %></p>

<% content_for :title, "Reservations" %>

<h1 class="text-center mb-4">Lista rezerwacji</h1>

<% if @reservations.any? %>
  <div class="container">
    <div class="row">
      <% @reservations.each do |reservation| %>
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
          <div class="reservation-card bg-light p-3 rounded shadow-sm">
            <p><strong>Użytkownik:</strong> <%= reservation.user.first_name %> <%= reservation.user.last_name %></p>
            <p><strong>Pokój:</strong> <%= reservation.room.name %></p>
            <p><strong>Data początkowa:</strong> <%= reservation.start_date.strftime("%d-%m-%Y") %></p>
            <p><strong>Data końcowa:</strong> <%= reservation.end_date.strftime("%d-%m-%Y") %></p>

            <div class="btn-group d-flex justify-content-between">
              <%= link_to "Pokaż szczegóły", reservation, class: "btn btn-info btn-sm" %>
              <%= link_to "Edytuj", edit_reservation_path(reservation), class: "btn btn-warning btn-sm" %>
              <%= button_to "Usuń", reservation, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Czy na pewno chcesz usunąć tę rezerwację?" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p>Brak rezerwacji.</p>
<% end %>

<div class="text-center mt-4">
  <%= link_to "Nowa rezerwacja", new_reservation_path, class: "btn btn-primary btn-sm" %>
</div>

<style>

    h1 {
        color: #333;
        font-size: 2rem;
        margin-bottom: 30px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }


    .reservation-card {
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .reservation-card:hover {
        transform: translateY(-10px);
    }

    .reservation-card p {
        font-size: 1rem;
        color: #555;
        margin-bottom: 15px;
    }


    .btn-group {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 10px;
    }

    .btn {
        font-size: 0.9rem;
        padding: 8px 12px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
        color: white;
    }

    .btn-info:hover {
        background-color: #138496;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: white;
    }

    .btn-warning:hover {
        background-color: #e0a800;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }


    @media (max-width: 767px) {
        .reservation-card {
            padding: 15px;
        }
    }


    .text-center a {
        text-decoration: none;
    }


    .text-center {
        margin-top: 30px;
    }

</style>
