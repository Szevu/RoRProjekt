<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>

<style>
    /* Pasek nawigacji */
    .navbar-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background-color: #007bff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .navbar {
        list-style-type: none;
        display: flex;
        justify-content: center;
        margin: 0;
        padding: 0;
        background-color: #007bff;
    }

    .navbar li {
        margin: 0 20px;
    }

    .navbar-link {
        color: white;
        text-decoration: none;
        font-size: 1.1rem;
        padding: 12px 20px;
        display: block;
        border-radius: 5px;
    }

    .navbar-link:hover {
        background-color: #0056b3;
        transition: background-color 0.3s;
    }

    /* Dostosowanie nagłówka i opisu poniżej paska */
    h1 {
        margin-top: 100px; /* Odstęp od paska */
        font-size: 2rem;
        color: #333;
    }

    p {
        font-size: 1.2rem;
        color: #666;
        margin-bottom: 30px;
    }

    /* Responsywność: Zmniejszamy rozmiar czcionki na mniejszych ekranach */
    @media (max-width: 768px) {
        .navbar {
            flex-direction: column;
            align-items: center;
        }

        .navbar-link {
            margin-bottom: 10px;
        }
    }
</style>
<p style="color: green"><%= notice %></p>

<div class="reservation-details-card">
  <h1 class="text-center mb-4">Szczegóły rezerwacji</h1>

  <p><strong>Użytkownik:</strong> <%= @reservation.user.first_name %> <%= @reservation.user.last_name %></p>
  <p><strong>Pokój:</strong> <%= @reservation.room.name %></p>
  <p><strong>Data początkowa:</strong> <%= @reservation.start_date.strftime("%d-%m-%Y") %></p>
  <p><strong>Data końcowa:</strong> <%= @reservation.end_date.strftime("%d-%m-%Y") %></p>

  <!-- Kontener dla przycisków -->
  <div class="btn-container">
    <%= link_to "Edytuj rezerwację", edit_reservation_path(@reservation), class: "btn btn-warning btn-sm" %>
    <%= button_to "Usuń rezerwację", @reservation, method: :delete, class: "btn btn-danger btn-sm" %>
  </div>

  <!-- Powrót do listy rezerwacji -->
  <div class="back-btn-container">
    <%= link_to "Powrót do listy rezerwacji", reservations_path, class: "btn btn-primary btn-sm" %>
  </div>
</div>

<style>
    /* Karta na szczegóły rezerwacji */
    .reservation-details-card {
        max-width: 600px;  /* Ograniczenie szerokości karty */
        margin: 0 auto;    /* Wyśrodkowanie karty na stronie */
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Nagłówek karty */
    .reservation-details-card h1 {
        color: #333;
        font-size: 1.8rem;
        margin-bottom: 20px;
    }

    /* Tekst szczegółów */
    .reservation-details-card p {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 10px;
    }

    /* Kontener dla przycisków edytuj i usuń */
    .btn-container {
        display: flex;
        justify-content: center;  /* Wyśrodkowanie przycisków */
        gap: 10px; /* Rozstawienie przycisków */
        margin-top: 20px;
    }

    /* Kontener dla przycisku Powrót */
    .back-btn-container {
        margin-top: 20px;
        text-align: center; /* Wyśrodkowanie przycisku */
    }

    /* Stylowanie przycisków */
    .btn {
        padding: 10px 20px;
        border-radius: 6px;
        font-size: 1rem;
        text-decoration: none;  /* Usunięcie podkreślenia z linków */
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
        border: none;
    }

    /* Efekt hover dla przycisków */
    .btn:hover {
        opacity: 0.9;
    }

    /* Zapewnienie, że wszystkie przyciski będą tej samej wielkości */
    .btn-sm {
        font-size: 1rem;
        padding: 10px 15px;
    }

    .mt-3 {
        margin-top: 20px;
    }

    /* Usunięcie podkreślenia z linków */
    a {
        text-decoration: none;
    }
</style>
