<div class="navbar-container">
  <ul class="navbar">
    <li><%= link_to 'Użytkownicy', users_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Pokoje', rooms_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Kategorie', categories_path, class: 'navbar-link' %></li>
    <li><%= link_to 'Rezerwacje', reservations_path, class: 'navbar-link' %></li>
  </ul>
</div>


<% content_for :title, "New reservation" %>

<h1 class="text-center mb-4">Nowa rezerwacja</h1>

<div class="reservation-form-container">
  <%= render "form", reservation: @reservation %>
</div>

<br>

<div class="text-center">
  <%= link_to "Powrót do listy rezerwacji", reservations_path, class: "btn btn-primary btn-sm" %>
</div>

<style>

    h1 {
        font-size: 2rem;
        color: #333;
        margin-bottom: 30px;
    }


    .reservation-form-container {
        max-width: 700px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }


    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #555;
    }

    input, select {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 5px;
        border: 1px solid #ddd;
        font-size: 1rem;
    }

    input:focus, select:focus {
        border-color: #007bff;
        outline: none;
    }


    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        width: 100%;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }


    .text-center a {
        text-decoration: none;
    }


    @media (max-width: 768px) {
        .reservation-form-container {
            padding: 15px;
        }

        h1 {
            font-size: 1.5rem;
        }
    }

</style>
